
@{
    ViewBag.Title = "ViewProduct";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using BanGiay.Models;
@model Product

<div class="col-lg-9">
    <div class="row">
        <div class="col-lg-6">
            <div class="product-pic-zoom">
                <img class="product-big-img" src="~/Content/img/AllProduct/@Model.img1" alt="">
                
            </div>
            
        </div>
        <div class="col-lg-6">
            <div class="product-details">
                <div class="pd-title">
                    <span>Sản Phẩm</span>
                    <h3>@Model.nameP</h3>
                    <a href="#" class="heart-icon"><i class="icon_heart_alt"></i></a>
                </div>
         
                <div class="pd-desc">
                    <p >
                        @Model.descriptionP
                    </p>
                    <h4> <span> @Model.cost</span></h4>
                </div>

                <div class="pd-size-choose">

                    <div class="sc-item">
                        <input type="radio" id="sm-size">
                        <label for="sm-size">@Model.size</label>
                   
                            <input type="radio" id="md-size">
                            <label for="md-size">@Model.size1</label>
                        
                            <input type="radio" id="lg-size">
                            <label for="lg-size">@Model.size2</label>
                       
                            <input type="radio" id="xl-size">
                            <label for="xl-size">@Model.size3</label>
                        
                            <input type="radio" id="xl-size">
                            <label for="xl-size">@Model.size4</label>
                       
                            <input type="radio" id="xl-size">
                            <label for="xl-size">@Model.size5</label>
                        </div>
                </div>
                
                <ul class="pd-tags">
                    <li><span>CATEGORIES</span>: Adidas Neo, Adidas NMD</li>

                </ul>
                <div class="pd-share">
                    <div class="p-code">Code: @Model.IDProduct</div>
                    <div class="pd-social">
                        <a href="#"><i class="ti-facebook"></i></a>
                        <a href="#"><i class="ti-twitter-alt"></i></a>
                        <a href="#"><i class="ti-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
