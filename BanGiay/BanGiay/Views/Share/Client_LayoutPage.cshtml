
<!DOCTYPE html>
@{
    BanGiay.Models.MyWebShop temp = ViewBag.inforWeb;
    List<BanGiay.Models.BrandSho> brand = ViewBag.brandN;

}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>dhskdhajsk</title>
    <meta charset="UTF-8">
    <meta name="description" content="Fashi Template">
    <meta name="keywords" content="Fashi, unica, creative, html">
