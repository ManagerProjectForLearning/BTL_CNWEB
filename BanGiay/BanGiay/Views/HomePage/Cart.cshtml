@using BanGiay.Models;
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Share/Client_LayoutPage.cshtml";
    int i = 0;
}
@model AccountCartShop
<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text product-more">
                    <a href="./home.html"><i class="fa fa-home"></i> Home</a>
                    <a href="./shop.html">Shop</a>
                    <span>Shopping Cart</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section Begin -->
<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form method="post" action="/Cart/UpdateCart">
                    <div class="cart-table">

                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th class="p-name">Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th><a href="@Url.Action("DeleteAllCart","Cart")"><i class="ti-close"></i></a></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    i = 0;
                                    if (Model != null )
                                    {
                                        if (Model.ListP != null)
                                        {
                                            foreach (DeltailCartShop it in Model.ListP)
                                            {
                                                i++;
                                            <tr>
                                                <td class="cart-pic first-row"><img src="~/Content/img/AllProduct/@it.img1" alt=""></td>
                                                <td class="cart-title first-row">
                                                    <h5>@it.nameP</h5>
                                                </td>
                                                <td class="p-price first-row">$@it.realCost</td>
                                                <td class="qua-col first-row">
                                                    <input type="hidden" name="masp" value="@it.IDProduct" />
                                                    <div class="quantity">
                                                        <div class="pro-qty">

                                                            <input type="text" name="sl" value="@it.soluong">
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="total-price first-row">$@(it.realCost * it.soluong)</td>
                                                <td class="close-td first-row"><a href="@Url.Action("DeleteProCart", "Cart", new { id = it.IDProduct })"><i class="ti-close"></i></a></td>
                                            </tr>
                                                }
                                            }
                                        }
                                    }

                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="cart-buttons">
                                <a href="#" class="primary-btn continue-shop">Continue shopping</a>
                                <input type="submit" class="primary-btn up-cart" value="Update cart"/>
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-4">
                            <div class="proceed-checkout">
                                <ul>
                                    <li class="subtotal">Subtotal <span>$240.00</span></li>
                                    <li class="cart-total">Total <span>$240.00</span></li>
                                </ul>
                                <a href="@Url.Action("Checkout","HomePage")" class="proceed-btn">PROCEED TO CHECK OUT</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->
